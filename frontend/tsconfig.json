{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx",
		"**/*.ts",
    "**/*.tsx",
    ".d.ts"
	],
}
